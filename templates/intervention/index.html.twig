{% extends 'base.html.twig' %}

{% block title %}Intervention index{% endblock %}

{% block body %}
    <h1>Intervention index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Deposit_date</th>
                <th>Return_date</th>
                <th>User_name</th>
                <th>Password</th>
                <th>Observations</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for intervention in interventions %}
            <tr>
                <td>{{ intervention.id }}</td>
                <td>{{ intervention.depositDate ? intervention.depositDate|date('Y-m-d') : '' }}</td>
                <td>{{ intervention.returnDate ? intervention.returnDate|date('Y-m-d') : '' }}</td>
                <td>{{ intervention.userName }}</td>
                <td>{{ intervention.password }}</td>
                <td>{{ intervention.observations }}</td>
                <td>
                    <a href="{{ path('intervention_show', {'id': intervention.id}) }}">show</a>
                    <a href="{{ path('intervention_edit', {'id': intervention.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}{% endif %}
    <a class="btn btn-primary" href="{{ path('intervention_new') }}"><i class="fas fa-plus"></i>{{' Create new'|trans}}</a>
{% endblock %}
